{% extends "layouts/root.njk" %}

{% from "breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "button/macro.njk" import govukButton %}

{% block breadcrumbs %}
    {{ govukBreadcrumbs({
        items: [
            {
                text: "Home",
                href: "/"
            }
        ]
    }) }}
{% endblock %}

{% block content_body %}
    <h1 class="govuk-heading-xl">Available journeys</h1>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <p class="govuk-body">
                The path for referring a claimant to the CV builder to create their CV...
            </p>
            <a class="govuk-button govuk-button--disabled" href="/referral">Begin</a>
        </div>

        <div class="govuk-grid-column-one-half">
            <p class="govuk-body">
                The path a claimant will take once they are invited to create a CV...
            </p>
            <a class="govuk-button govuk-button--start" href="/claimant">Begin</a>
        </div>
    </div>

    <div class="govuk-grid-row">
        <div class="govuk-grid-column-one-half">
            <p class="govuk-body">
                The path a work coach will take to review a created CV...
            </p>
            <a class="govuk-button govuk-button--disabled" href="/review">Begin</a>
        </div>
    </div>
{% endblock %}
